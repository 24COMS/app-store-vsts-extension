{
    "id": "2e371150-da5e-11e5-83da-0943b1acc572",
    "name": "AppleAppStoreRelease",
    "friendlyName": "Apple App Store Release",
    "description": "VSTS Task to release your build ios app to the Apple Store",
    "author": "Microsoft Corporation",
    "helpMarkDown": "Replace with markdown to show in help",
    "category": "Deploy",
    "visibility": [
        "Build",
        "Release"
    ],
    "demands": [],
    "version": {
        "Major": "0",
        "Minor": "0",
        "Patch": "1"
    },
    "minimumAgentVersion": "1.83.0",
    "instanceNameFormat": "Publish $(appPath) to the App Store",
    "groups": [
        {
            "name": "advanced",
            "displayName": "Advanced",
            "isExpanded": false
        }
    ],
    "inputs": [
        {
            "name": "authType",
            "type": "pickList",
            "label": "Authentication Method",
            "defaultValue": "ServiceEndpoint",
            "helpMarkDown": "",
            "options": {
                "ServiceEndpoint": "Service Endpoint",
                "UserAndPass": "Username and Password"
            }
        },
        {
            "name": "serviceEndpoint",
            "type": "connectedService:apple-app-store",
            "label": "Service Endpoint",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The VSTS Service Endpoint that specifies the identiy you wish to publish your IPA under.",
            "visibleRule": "authType = ServiceEndpoint"
        },
        {
            "name": "username",
            "type": "string",
            "label": "Email",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "The email of the account with which to publish to the Apple App Store.",
            "visibleRule": "authType = UserAndPass"
        },
        {
            "name": "password",
            "type": "string",
            "label": "Password",
            "defaultValue": "",
            "isConfidential": true,
            "required": true,
            "helpMarkDown": "The password of the account with which to publish to the Apple App Store.",
            "visibleRule": "authType = UserAndPass"
        },
        {
            "name": "appName",
            "type": "string",
            "label": "Friendly App Name",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Name to publish app under"
        },
        {
            "name": "language",
            "type": "pickList",
            "label": "Language",
            "defaultValue": "English",
            "helpMarkDown": "",
            "options": {
                "English": "English",
                "German": "German"
            }
        },
        {
            "name": "version",
            "type": "string",
            "label": "App Version",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "App version"
        },
        {
            "name": "ipaPath",
            "type": "filePath",
            "label": "Path to IPA",
            "defaultValue": "",
            "required": true,
            "helpMarkDown": "Path to the IPA to publish"
        },
        {
            "name": "shouldSkipItc",
            "type": "boolean",
            "label": "Skip Itunes Connect Create?",
            "required": false,
            "defaultValue": false,
            "groupName": "advanced",
            "helpMarkDown": "Checking this box will skip the creation of the app on iTunes Connect"
        },
        {
            "name": "shouldSkipDevCenter",
            "type": "boolean",
            "label": "Skip Developer Portal Create?",
            "required": false,
            "defaultValue": false,
            "groupName": "advanced",
            "helpMarkDown": "Checking this box will skip the creation of the app on the Apple Developer Portal"
        },
        {
            "name": "teamId",
            "type": "string",
            "label": "Team Id",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "The id of your team if you are in multiple teams"
        },
        {
            "name": "teamName",
            "type": "string",
            "label": "Team Name",
            "required": false,
            "groupName": "advanced",
            "helpMarkDown": "The name of your team if you are in multiple teams"
        }
    ],
    "execution": {
        "Node": {
            "target": "apple-app-store-release.js",
            "argumentFormat": ""
        },
        "PowerShell": {
            "target": "$(currentDirectory)\\apple-app-store-release.ps1",
            "argumentFormat": "",
            "workingDirectory": "$(currentDirectory)"
        }
    }
}